{
  "workflow_name": "ipadapter_scene_sdxl",
  "model_type": "sdxl",
  "description": "SDXL scene generation with IP-Adapter for character consistency",
  "notes": "Requires ComfyUI_IPAdapter_plus custom node",
  "placeholders": {
    "POSITIVE_PROMPT": {"node_id": "6", "field": "text"},
    "NEGATIVE_PROMPT": {"node_id": "7", "field": "text"},
    "SEED": {"node_id": "3", "field": "seed"},
    "CHECKPOINT": {"node_id": "4", "field": "ckpt_name"},
    "WIDTH": {"node_id": "5", "field": "width"},
    "HEIGHT": {"node_id": "5", "field": "height"},
    "STEPS": {"node_id": "3", "field": "steps"},
    "CFG": {"node_id": "3", "field": "cfg"},
    "CHARACTER_IMAGE": {"node_id": "10", "field": "image"},
    "IPADAPTER_WEIGHT": {"node_id": "12", "field": "weight"}
  },
  "workflow": {
    "3": {
      "class_type": "KSampler",
      "inputs": {
        "cfg": 1.5,
        "denoise": 1,
        "latent_image": ["5", 0],
        "model": ["12", 0],
        "negative": ["7", 0],
        "positive": ["6", 0],
        "sampler_name": "euler",
        "scheduler": "normal",
        "seed": 0,
        "steps": 4
      }
    },
    "4": {
      "class_type": "CheckpointLoaderSimple",
      "inputs": {
        "ckpt_name": "sdxl_lightning_4step.safetensors"
      }
    },
    "5": {
      "class_type": "EmptyLatentImage",
      "inputs": {
        "batch_size": 1,
        "height": 1024,
        "width": 1024
      }
    },
    "6": {
      "class_type": "CLIPTextEncode",
      "inputs": {
        "clip": ["4", 1],
        "text": "scene with character, high quality, detailed"
      }
    },
    "7": {
      "class_type": "CLIPTextEncode",
      "inputs": {
        "clip": ["4", 1],
        "text": "low quality, blurry, deformed"
      }
    },
    "8": {
      "class_type": "VAEDecode",
      "inputs": {
        "samples": ["3", 0],
        "vae": ["4", 2]
      }
    },
    "9": {
      "class_type": "SaveImage",
      "inputs": {
        "filename_prefix": "kahani_scene_character",
        "images": ["8", 0]
      }
    },
    "10": {
      "class_type": "LoadImage",
      "inputs": {
        "image": "character_reference.png"
      }
    },
    "11": {
      "class_type": "IPAdapterUnifiedLoader",
      "inputs": {
        "model": ["4", 0],
        "preset": "PLUS FACE (portraits)"
      }
    },
    "12": {
      "class_type": "IPAdapterApply",
      "inputs": {
        "ipadapter": ["11", 1],
        "clip_vision": ["11", 2],
        "image": ["10", 0],
        "model": ["11", 0],
        "weight": 0.7,
        "weight_type": "ease in-out",
        "start_at": 0,
        "end_at": 1
      }
    }
  }
}
