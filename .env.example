# Kahani Configuration - Single source of truth for entire app

# ===================
# Security (REQUIRED)
# ===================
JWT_SECRET_KEY=your-super-secret-jwt-key-here-please-change-in-production

# ===================
# Database
# ===================
DATABASE_URL=sqlite:///./data/kahani.db

# ===================
# Admin User (Initial Setup)
# ===================
ADMIN_EMAIL=admin@localhost
ADMIN_PASSWORD=changeme123

# ===================
# LLM Configuration (for defaults - users can override in settings)
# ===================
LLM_BASE_URL=http://localhost:1234/v1
LLM_API_KEY=not-needed-for-local
LLM_MODEL=local-model
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7

# ===================
# Context Management
# ===================
CONTEXT_MAX_TOKENS=4000
CONTEXT_KEEP_RECENT_SCENES=3
CONTEXT_SUMMARY_THRESHOLD=5
CONTEXT_SUMMARY_THRESHOLD_TOKENS=10000
CONTEXT_TOKEN_BUFFER=0.9

# ===================
# Semantic Memory
# ===================
ENABLE_SEMANTIC_MEMORY=true
SEMANTIC_DB_PATH=./data/chromadb
SEMANTIC_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
SEMANTIC_SEARCH_TOP_K=5
SEMANTIC_CONTEXT_WEIGHT=0.4

# ===================
# Context Strategy
# ===================
CONTEXT_STRATEGY=hybrid
SEMANTIC_SCENES_IN_CONTEXT=5
CHARACTER_MOMENTS_IN_CONTEXT=3

# ===================
# Auto-extraction
# ===================
AUTO_EXTRACT_CHARACTER_MOMENTS=true
AUTO_EXTRACT_PLOT_EVENTS=true
EXTRACTION_CONFIDENCE_THRESHOLD=70

# ===================
# CORS (will be auto-configured by network_config.py)
# ===================
CORS_ORIGINS="*"

# ===================
# File Storage
# ===================
DATA_DIR=./data
EXPORT_DIR=./exports
MAX_STORY_SIZE_MB=10
MAX_USERS=100

# ===================
# Features
# ===================
ENABLE_REGISTRATION=true
ENABLE_STORY_SHARING=true
ENABLE_PUBLIC_STORIES=false

# ===================
# Logging
# ===================
LOG_LEVEL=DEBUG
LOG_FILE=./logs/kahani.log

# ===================
# Application
# ===================
APP_NAME=Kahani
APP_VERSION=0.1.0
DEBUG=false
