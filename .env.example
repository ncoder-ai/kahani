# Environment variables for Kahani
# Copy this file to .env and customize the values

# Database Configuration
DATABASE_URL=sqlite:///./data/kahani.db
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost:5432/kahani

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin User (created on first run)
ADMIN_EMAIL=admin@localhost
ADMIN_PASSWORD=changeme123

# LLM Configuration
LLM_BASE_URL=http://localhost:1234/v1
LLM_API_KEY=not-needed-for-local
LLM_MODEL=local-model
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7

# Application Settings
APP_NAME=Kahani
APP_VERSION=0.1.0
DEBUG=true
CORS_ORIGINS=["http://localhost:3000"]

# File Storage
DATA_DIR=./data
EXPORT_DIR=./exports
MAX_STORY_SIZE_MB=10
MAX_USERS=100

# Features
ENABLE_REGISTRATION=true
ENABLE_STORY_SHARING=true
ENABLE_PUBLIC_STORIES=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/kahani.log